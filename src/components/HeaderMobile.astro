---
import IconPin from "./IconPin.astro";
import IconPhone from "./IconPhone.astro";
import IconSkype from "./IconSkype.astro";
import IconCalendarDays from "./IconCalendarDays.astro";
import Link from "./Link.astro";
---

<Fragment>
  <a
    href="https://www.resalib.fr/praticien/56645-elisa-francomme-kinesiologue-albi#newrdvmodal"
    class="md:hidden flex items-center gap-2 bg-accent-700 text-white font-bold px-3 py-2 rounded hover:bg-accent-600 transition-all hover:scale-105 sticky top-0"
    target="_blank"
  >
    <IconCalendarDays class="size-6" />
    Réserver une séance
  </a>
  <div class="flex flex-col md:hidden justify-between">
    <Link
      href="https://maps.app.goo.gl/KC2ZVWZw9pDo8Ert5"
      target="_blank"
      class="flex gap-2 items-center px-3 py-2"
      aria-label="Adresse"
    >
      <IconPin class="size-6" />
      <p>11 avenue Albert Thomas<br />81000 Albi</p>
    </Link>
    <div class="flex items-center gap-2 px-3 py-2" aria-label="Téléphone">
      <IconPhone class="size-6" />
      <p>06 33 55 22 99</p>
    </div>
    <div class="flex items-center gap-2 px-3 py-2" aria-label="Skype">
      <IconSkype class="size-6" />
      <p>elisafrancomme</p>
    </div>
  </div>
</Fragment>
