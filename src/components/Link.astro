---
interface Props {
  href: string;
  class?: string;
  target?: string;
}

const { href, target, class: className } = Astro.props;
---

<a
  href={href}
  target={target}
  class={`transition-all hover:text-accent-800 hover:scale-105 focus-visible:outline outline-brand-500 ${className}`}
  ><slot /></a
>
