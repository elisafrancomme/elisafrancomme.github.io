---
interface Props {
  frontmatter: { title: string };
}

const { frontmatter } = Astro.props;

import BaseLayout from "./Base.astro";
import Header from "../components/Header.astro";
import Navigation from "../components/Navigation.astro";
import Branch from "../components/Branch.astro";
---

<BaseLayout title={frontmatter.title}>
  <Branch class="absolute right-0 top-48 md:top-44 xl:top-24 2xl:top-12" />
  <Branch
    class="absolute left-0 -top-8 -scale-x-100 md:-top-40 xl:-top-56 2xl:-top-16"
  />

  <Header />
  <Navigation />

  <a
    class="mx-2 my-8 block"
    target="_blank"
    href="https://www.resalib.fr/praticien/56645-therapeute-corps-esprit-elisa-francomme-therapeute-psychocorporel-albi"
  >
    <img
      class="rounded shadow mx-auto"
      alt="Retrouvez Thérapeute Corps - Esprit / Elisa Francomme sur Resalib : annuaire, référencement et prise de rendez-vous pour les Thérapeutes Psychocorporel"
      src="https://www.resalib.fr/app/images/generate/fbk_56645.png"
    />
  </a>
  <main class="w-fit mt-12 px-2 mx-auto pb-8 prose text-justify prose-brand">
    <slot />
  </main>
</BaseLayout>
