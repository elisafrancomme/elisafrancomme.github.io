---
interface Props {
  title: string;
}

const { title } = Astro.props;

import "../styles/tailwind.css";
import Header from "../components/Header.astro";
import Navigation from "../components/Navigation.astro";
import Aside from "../components/Aside.astro";
---

<!doctype html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta
      name="description"
      content="ThÃ©rapeute Corps Esprit, Elisa Francomme"
    />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link
      rel="preload"
      href="/fonts/YoureInvited.otf"
      as="font"
      type="font/otf"
      crossorigin
    />
    <link
      rel="preload"
      href="/fonts/Quicksand-Regular.ttf"
      as="font"
      type="font/ttf"
      crossorigin
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | Elisa Francomme</title>
  </head>
  <body
    class="bg-gradient-to-b from-brand-300 to-brand-400 min-h-lvh text-black"
  >
    <div
      class="hidden lg:block bg-[url(/background.png)] absolute right-0 top-0 h-[600px] w-[600px] bg-cover opacity-60"
    >
    </div>

    <div
      class="hidden lg:block bg-[url(/background.png)] absolute left-0 top-[150px] h-[500px] w-[500px] bg-cover -scale-x-100 opacity-60"
    >
    </div>

    <Header />
    <Navigation />

    <div
      class="w-fit mx-auto grid items-start gap-4"
      style="grid-template-columns: max-content 1fr;"
    >
      <Aside />
      <main class="pb-8">
        <slot />
      </main>
    </div>
  </body>
</html>
